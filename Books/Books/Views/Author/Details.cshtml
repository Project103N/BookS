    <img src="https://foodtank.com/wp-content/uploads/2021/07/alfons-morales-YLSwjSy7stw-unsplash.jpg" alt="background" class="arkaPlan">
</div>
<div class="container">

    <div class="row mt-5">
        <div class="bg-light position-relative pt-2 m-0 rounded-pill">
            <nav aria-label="breadcrumb ">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="#">@Html.ActionLink("Ana Sayfa", "Index", "Home")</a></li>
                    <li class="breadcrumb-item text-center">@Html.ActionLink("Yazarlar", "Index", "Author")</li>
                    <li class="breadcrumb-item active" aria-current="page">@Html.ActionLink(Model.author.FullName, "Details", "Author")</li>
                </ol>
            </nav>
        </div>
        <div class="col-md-2 mt-2">
            <div class="card bg-light" style="width: 18rem;">
                <div class="box-content text-center rounded-3 bg-light">
                    <!-- <div class="w-100 text-black bg-opacity-50 bg-warning ribbon-container">
                        <h3>Yazar Hakkında</h3>
                    </div>                    -->
                    <!-- https://picsum.photos/200 -->
                    <img src="https://www.cumhuriyet.com.tr/Archive/2018/10/11/1108090_resource/15.jpg" class="card-img-top " alt="...">
                    <div class="card-body bg-light">
                        <h2 class="card-title "><strong>@Model.author.FullName</strong></h2>
                        <hr />
                        <p class="card-text">@Model.author.Biography </p>
                        <p>@Model.author.Birthday.Year-@Model.author.Birthday.Month-@Model.author.Birthday.Day</p>
                    </div>
                </div>

            </div>
        </div>
        <div class="col-md-10 mt-2 bg-white">

            <table class="tab-content table table-bordered table-responsive table-striped position-relative">
                <tr>
                    <th>
                        Book Name
                    </th>
                    <th>
                        Publish Date
                    </th>
                    <th>
                        Page Count
                    </th>
                    <th>
                        Total Sell
                    </th>
                    <th>
                        Units In Stock
                    </th>
                    <th>
                        Unit Price
                    </th>
                </tr>
                @foreach (Book book in Model.AuthorsBook)
                {
                    <tr>

                        <td>
                            @book.Name
                        </td>
                        <td>
                            @book.PublishDate.Year-@book.PublishDate.Month-@book.PublishDate.Day
                        </td>
                        <td>
                            @book.PageCount
                        </td>
                        <td>
                            @book.TotalSell
                        </td>
                        <td>
                            @book.UnitsInStock
                        </td>
                        <td>
                            @book.UnitPrice
                        </td>
                        <td>
                            @*@Html.ActionLink("Edit", "Edit", new { id = Model.author.AuthorID }) |*@
                            @Html.ActionLink("Edit", "Edit", "Book", new { id = book.BookId }) |
                            @Html.ActionLink("Back to List", "Index")
                        </td>
                    </tr>
                }
            </table>
        </div>
    </div>
</div>

